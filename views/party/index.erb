<div class = "wrapper">	
	<h1>All Parties</h1>

	<a class ="nav" href = "/parties/new">Add new party?</a>

	<h2>CURRENT PARTIES</h2>
	<table>
	<% @current_parties.each do |party| %>
		<tr>
			<td>
				<a href="/parties/<%=party.id%>"><%=party.party_name%></a> 
			</td>
			<td>
				Party of <%=party.guest_num%>
			</td>
		</tr>
	<% end %>
	</table>

	<h2>CHECKED OUT PARTIES (ALREADY PAID)</h2>
	<table>
	<% @paid_parties.each do |party| %>
		<tr>
			<td>
				<a href="/parties/<%=party.id%>"><%=party.party_name%></a> 
			</td>
			<td>
				Party of <%=party.guest_num%>
			</td>
		</tr>
	<% end %>
	</table>
</div>	

